form-item {
    .form-item {
        position: relative;
        .show-err {
          position: absolute;
          z-index: 9;
          max-width: 96%;
          background-color: #fff;
          border: .55px solid $beaRed;
          left: .6rem;
          padding: .5rem .8rem;
          line-height:1.8rem;
          border-radius: .5rem;
          bottom: 40px;
          color:$beaRed;
          font-size: 1rem;
          text-align: left;
          box-shadow: 0 .3rem .8rem rgba(0, 0, 0, .2);
        }
        .show-err:after {
          content:'';
          display:block;
          position:absolute;
          bottom: -14px;
          left: 2rem;
          border-style:solid;
          border-width:7px;
          border-color:$beaRed transparent transparent transparent;
        }
    }
    .err-box {
        position: absolute;
        z-index: 9;
        background-color: #fff;
        left: 1rem;
        padding: .5rem .8rem;
        min-height: 3rem;
        border-radius: .3rem; 
        top: 3.2rem;
        box-shadow: 0 2px 2px rgba(255, 0, 0, .3);
    }
    .un-border {
        border-bottom: 1px solid #616161;
    }
    .select-item {
        flex: 1;
    }
}