.range-ios {
  padding: 0 8px 0 16px;
  .range-slider {
    height: 26px;
  }
  .range-knob {
    top: 0;
    left: 15px;
    border-radius: 0;
    width: 10px;
    height: 26px;
    box-shadow: none;
    -webkit-box-shadow: none;
  }
  .range-bar {
    background: transparent;
  }
  .range-tick {
    top: 13.5px;
    width: 2px;
    height: 12px;
    background: #fff;
  }
}

.p2-checkbox {
  margin:0 auto;
  width:60%;
  .checkbox-icon-box {
    margin: 1rem auto 0;
    overflow: hidden;
    width:70%;
  }
}
.checkbox-icon {
  position: relative;
  margin-right:1rem;
  display: inline-block;
  width: 1rem;
  height:1rem;
  border-radius: 50%;
  border:1px solid #fe9938;
}
.checkbox-icon.checked::after {
  content: '';
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  display: inline-block;
  width:.6rem;
  height:.6rem;
  border-radius: 50%;
  background-color:#fe9938;
}
.show-err {
  position: absolute;
  z-index: 9;
  max-width: 96%;
  background-color: #fff;
  border: .55px solid $beaRed;
  left: .6rem;
  padding: .5rem .8rem;
  line-height:1.8rem;
  border-radius: .5rem;
  bottom: 5rem;
  color:$beaRed;
  font-size: 1rem;
  text-align: left;
  box-shadow: 0 .3rem .8rem rgba(0, 0, 0, .2);
}
.show-err:after {
  content:'';
  display:block;
  position:absolute;
  bottom: -14px;
  left: 2rem;
  //border-right:5px solid transparent;
  //border-left:5px solid transparent;
  //border-top:7px solid $beaRed;
  border-style:solid;
  border-width:7px;
  border-color:$beaRed transparent transparent transparent;
}

