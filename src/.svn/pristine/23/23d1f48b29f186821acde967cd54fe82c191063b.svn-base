page-result {
  text-align: center;
  .result-pic {
    ion-icon {
      font-size: 8rem;
      color:#F59F2F;
    }
    img {
      width: 7rem;
      margin-top: 1rem;
    }
  }
  .show-err {
    left: 1rem;
    bottom: 4.9rem;
  }
  .result-text {
    margin: 1rem 0;
    position: relative;
  }
  .approved {
    margin: 1rem;
    padding: 2.8rem 0;
    color: white;
    text-align: center;
    background: -webkit-linear-gradient(left,#F59F2F 0%,#FCE266 100%);
    background: -moz-linear-gradient(left,#F59F2F 0%,#FCE266 100%);
    background: -o-linear-gradient(left,#F59F2F 0%,#FCE266 100%);
    background: linear-gradient(left,#F59F2F 0%,#FCE266 100%);
  }
  .offered {
    margin: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 4px solid #FFCE32;
    color: #0019ff;
    font-weight: bold;  
    text-align: center;
  }
  .result-data {
    font-size: 1.4rem;
    line-height: 2.2;
    display: flex;
    .flex_box {
      display: flex;
      width: 100%;
      span {
        display: block;
      }
    }
    .flex_boxes {
      display: inline-block;
      width: 50%;
      border-left: 1px solid #ABACAE;
      .checkbox-icon-box {
      margin-left: -3rem;
      }
    }
    .flex_title {
      display: inline-block;
      width: 45%;
      margin-left: 1rem;
      text-align: left;
      span {
        display: block
      }
    }
    .flex_detail {
      display: inline-block;
      text-align: left;
      span {
        display: block
      }
    }
  }
  .device-sm {
    .flex_title {
      width: 10rem;
    }
    .line-bar {
      left: 65%;
    }
  }
  .two-part  {
    .two-left {
      float: right;
    }
    .flex_title, .flex_boxes {
      flex: 1;
      text-align: left;
      padding: 1rem 2rem;
    }
  }
  .refer-code {
    margin: 1rem;
    padding: 1.4rem 0;
    background: #F40527;
    color: white;
    font-weight: bold;
    font-size: 1.6rem;
  }
  .refer-date {
    font-size: 1.5rem;
    line-height: 1.6;
    .overflow{
      display: inline-block;
      font-size: 1.4rem;
      border: 1px solid rgb(218, 109, 109);
      padding: .2rem .5rem;
      border-radius: 4px;
    }
  }
  .special{
    color: rgba(34,177,76,1.0);
    font-weight: bold;
  }
  .pending-text {
    margin-top: 2rem;
    p {
      margin-bottom: 1rem;
      padding: 0 2rem;
    }
  }
  .apply-tips {
    width: 100%;
    margin-top: 2rem;
    p {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    .img-middle {
      margin-right: 3rem;
    }
    img {
      max-width: 4rem;
      vertical-align: middle;
    }
  }
  .btn-group {
    display: flex;
    width: 100%;
    padding: 0 1rem;
    .set-margin {
      width: 10%;
    }
  }
  .btn {
    // margin-left: 1.5rem;
    display: inline-block;
    margin-top: 2rem;
    background-color: #FF9A34;
    color: white;
    width: 39%;
    flex: 1;
    // max-width: 12rem;
    height: 4.3rem;
    font-size: 1.6rem;
    //p {
    //  opacity: 0.6;
    //}
  }
  .hyper-link {
    text-decoration: underline;
    font-style: normal;
  }
  .rule-text {
    margin: 0rem 1rem;
    padding-bottom: 1.5rem;
    font-size: 1.2rem;
    border-bottom: 1px solid #EEE;
  }
  .fail-text {
    text-align: center;
    padding: 4rem 0;
  }
  .checkbox-icon-box {
    margin-bottom:.5rem;
    position: relative;
    i {
      //width: 2rem;
      //height: 2rem;
      vertical-align: middle;
    }
    span:last-child {
      position: absolute;
      top: 5%;
    }
  }
  //.checkbox-icon.checked::after {
  //  width: 1rem;
  //  height: 1rem;
  //}
  .font-black {
    color: #000;
    text-decoration: none;
    padding-bottom: .6rem;
  }
  .back-app img {
    margin: 0 .4rem;
    max-height: 3rem;
    vertical-align: middle;
  }
}