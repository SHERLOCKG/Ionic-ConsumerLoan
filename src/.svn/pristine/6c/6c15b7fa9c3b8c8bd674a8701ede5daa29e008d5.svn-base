page-home {
  ion-content {
    text-align: center;
  }
  .loanItem {
    position: relative;
    text-align: left;
    padding: 0 16px;
    span {
      padding-left: 40px;
    }
    .loan-amount {
      width:16rem;
      margin-left:30px;
      display: inline-block;
      padding-left: 10px;
      height:3rem;
      line-height:3rem;
      border: 1px solid #bdbdbd;
      border-radius: .5rem;
      .amount-input {
        display: inline-block;
      }
      #amount {
        width:11rem;
        margin-top:-2px;
        height: 3rem;
        border: 0;
        outline: 0;
        background-color: transparent;
      }
    }
    .range {
      margin-top:.8rem;
      //padding-left: 50px;
      .range-bar-active {
        background: $baseGreen;
      }
      .range-knob {
        line-height:28px;
      }
      .range-tick-active {
        background: #8ab047;
      }
    }
    .purpose {
      position: absolute;
      top: -11px;
      width: 80%;
      max-width: 100% !important;
      .select-text {
        text-align: right;
      }
    }
  }
  .notice {
    padding: 0 15%;
    font-size: 1.2rem;
    color: #666;
  }
  .loanPay {
    p {
      line-height: 1.6;
    }
    .min-font {
      font-size: 1.2rem;
      margin-bottom: .1rem;
    }
    span {
      color: $baseGreen;
      font-size: 2rem;
      display: inline-block;
      margin: .5rem 0;
    }
  }

}