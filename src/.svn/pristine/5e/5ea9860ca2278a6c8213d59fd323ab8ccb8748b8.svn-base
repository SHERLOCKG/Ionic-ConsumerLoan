<div class="form-item">
    <div class="show-err" *ngIf="errMsg" @fadeIn (click)="errMsg = ''">{{errMsg}}</div>

    <ion-item [ngClass]="{'has-err': errMsg}" *ngIf="!opItem">
        <ion-label>{{name}}</ion-label>
        <ion-input [(ngModel)]="inputValue" [type]="inputType" (click)="errMsg = ''" [maxlength]="maxLen" [disabled]="isDisabled" (input)="keyUp($event)" class="un-border"></ion-input>
    </ion-item> 
    <!-- <ion-item [ngClass]="{'has-err': errMsg}" *ngIf="!opItem">
        <ion-label floating>{{name}}</ion-label>
        <ion-input [(ngModel)]="inputValue" [type]="inputType" (click)="errMsg = ''" [maxlength]="maxLen" [disabled]="isDisabled" (input)="keyUp($event)"></ion-input>
    </ion-item> -->

    <ion-item [ngClass]="{'has-err': errMsg}" *ngIf="opItem"> 
        <ion-label floating class="select-label">{{name}}</ion-label>
        <ion-select class="select-item" [(ngModel)]="inputValue" cancelText="取消" okText="確定" (click)="errMsg = ''" [disabled]="isDisabled" (ionChange)="changeValue()">
            <ion-option *ngFor="let item of opItem" [value]="item.value">{{item['name' + userType]}}</ion-option>
        </ion-select>
    </ion-item>
</div>
