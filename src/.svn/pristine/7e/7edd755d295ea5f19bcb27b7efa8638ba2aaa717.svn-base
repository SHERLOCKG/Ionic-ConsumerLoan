    .upload {
        position: absolute;
        font-size: 100px;
        right: 0;
        top: 0;
        //opacity: 0;
    }
    .cut-line {
        width:32%;
        display: inline-block;
    }
    .add-icon {
        font-size: 28px;
        font-weight: bolder;
    }
    .addStyle {
        width:8%;
        text-align:center;
        display: inline-block;
        padding:0;
        .item-inner {
            border-bottom: 1px solid #c8c7cc!important;
            padding-right: 0 !important;
            input {
                text-align: center;
                width: 100% !important;
                margin-right: 0 !important;
                padding-left: 0 !important;
            }
        }
    }

    .list{
        .lefticon {
            vertical-align: bottom;
            padding:0;
            min-height:3.4rem;
            .item-inner {
                border-bottom:0!important;
                padding:0;
            }
            .label {
                font-size: 2.5rem;
                margin:0;
                color:#c8c7cc;
                vertical-align: bottom;
                font-weight: 300;
            }
        }
    }
    .relativeList {
        display: -webkit-box;
    }
    .break-word {
        white-space: normal;
        width: 80%;
        word-wrap: break-word;
    }
    .lang-style {
        width: 100%;
        padding-right: 0.5rem;
        margin-top: 2px;
        .list-header {
            background-color: #fff;
            color: #000;
        }
    }
    .lang-ibutton {
        font-size: 2rem;
        vertical-align: middle;
        margin-top: 0;
    }
    .relative-box {
        .item-cover {
            width:88%;
        }
    }
    .address-statement {
        padding: 16px 16px 0 16px;;
        margin: 0;
    }
    .small-space .label {
        letter-spacing: 0;
    }
    .idcard-box {
        width:80%;
        display: inline-block;
        .item-inner {
            padding-left:16px;
            margin-left:-16px;
            border-bottom: 1px solid #c8c7cc!important;
        }
    }
