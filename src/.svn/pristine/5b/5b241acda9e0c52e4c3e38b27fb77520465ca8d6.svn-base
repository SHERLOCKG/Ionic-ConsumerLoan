header-step {
  .head-title {
    // margin: 0;
    border-bottom: 1.5px  solid $baseGreen;
    color: $baseGreen;
    font-size: 1.68rem;
    text-align: left;
    line-height: 1;
    // margin-left: 16px;
    span {
      display: inline-block;
      background: $baseGreen;
      color: #fff;
      padding: .8rem 1.2rem .6rem .2rem;
      
      // padding-left: .2rem;
      // padding-right: .8rem;
      border-radius: 0 2.1rem 0 0;
    }
    // img {
    //   width:70%;
    //   height:auto;
    // }
  }
  .head-title li {
      float: left;
      margin-right: .2rem;
      padding: .3rem .5rem 0;
      color: #fff;
      font-size: 2.8rem;
    background:-webkit-linear-gradient(top, #c1d9ac, $baseGreen);
    background:-moz-linear-gradient(top, #c1d9ac, $baseGreen);
    background:-o-linear-gradient(top, #c1d9ac, $baseGreen);
    background:linear-gradient(to bottom, #c1d9ac, $baseGreen);
      border-radius: .6rem .6rem 0 0;
  }
  .last-li:after {
      content: '';
      clear: both;
      display: block;
  }
  .step-bar {
      margin:1.2rem 0;
      width:100%;
      height:2.3rem;
      text-align: center;
      font-size: 0;
      ion-icon{
        font-weight:bold;
      }
      span {
        display: inline-block;
        width:2.3rem;
        height:2.3rem;
        line-height:calc(2.3rem - 6px);
        text-align: center;
        border-radius: 50%;
        border:3px solid #eeede9;
        vertical-align: middle;
        font-size: 1.8rem;
        color: #ccc;
      }
      label:nth-of-type(2){
        left:55%
      }
      label:nth-of-type(3){
        left:80%;
      }
      .step-line {
        display: inline-block;
        width:6%;
        height:3px;
        background-color:#eeede9;
        vertical-align: middle;
      }
      .step-line.finish {
        background-color:#64c80d;
      }
      span.current {
        color:#fff;
        border:0;
        line-height:2.3rem;
        background-color:$beaRed;
      }
      span.finish {
        color:#fff;
        border:3px solid #eeede9;
        background-color:#64c80d;
      }
      .finish-mark {
        font-weight: bold;
      }
    }
}