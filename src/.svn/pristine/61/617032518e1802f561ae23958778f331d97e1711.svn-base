page-page2 {
    .canvas {
        display: none;
    }
    .err-hint:lang(En) {
        font-size: 1rem;
    }
    .idcard-box {
        width:80%;
        display: inline-block;
        .item-inner {
            padding-left:16px;
            margin-left:-16px;
            border-bottom: 1px solid #c8c7cc!important;
        }
    }
    .addStyle {
        width:6%;
        text-align:center;
        display: inline-block;
        padding:0;
        .item-inner {
            border-bottom: 1px solid #c8c7cc!important;
            padding-right: 0 !important;
            input {
                text-align: center;
                width: 100% !important;
                margin-right: 0 !important;
                padding-left: 0 !important;
            }
        }
    }
        .lefticon {
            vertical-align: bottom;
            padding:0;
            min-height:3.4rem;
            .item-inner {
                border-bottom:0!important;
                padding:0!important;
            }
            .label {
                font-size: 2.5rem;
                margin:0;
                color:#c8c7cc;
                vertical-align: bottom;
                font-weight: 300;
            }
        }
    .loading-spinner {
        circle {
            fill:#fff;
        }
    }
    .float-l {
        float: left;
    }
    .float-r {
        float: right;
    }
    .info-icon {
        //vertical-align: middle;
        color:#333;
    }
    .main {
        width:100%;
        text-align: center;
        font-size: 1.4rem;
        color:#333;
    }
    .agree-arrange-box {
        position: relative;
        margin:1.5rem auto;
        width:100%;
        max-width: 26.6rem;
    }

    .upload-pic {
        position: relative;
        display: table;
        margin:.1rem auto;
        padding:.2rem 9.2rem 0 4.3rem;
        width:90%;
        height:auto;
        min-height:6rem;
        background-color:#ccc;
        text-align: left;
        color:#fff;
        background-position:.3rem center;
        background-size: auto 62%;
        background-repeat: no-repeat;
        span {
            display: table-cell;
            vertical-align:middle;
        }
        .pic-box {
            position: absolute;
            top:50%;
            right:4.9rem;
            display: inline-block;
            width:3.5rem;
            height:4rem;
            transform: translateY(-50%);
        }
        img {
            max-width: 100%;
            max-height: 100%;
            position: absolute;
            left: 50%;
            top:50%;
            transform: translate(-50%,-50%);
        }
        .btn-confirm {
            position: absolute;
            top:0;
            right:0;
            width:4rem;
            height:100%;
            color:#fff;
            font-size: 1.4rem;
            background-color:#f89f2f;
        }
        .btn-confirm.btn-disabled {
            background-color:#ffc071;
            color:#eee;
        }
        .btn-confirm[disabled] {
            opacity: 1;
        }
    }
    .upload-pic.hkid {
        background-image:url("../assets/imgs/icon_id.png");
    }
    .upload-pic.passbook {
        background-image:url("../assets/imgs/icon_id.png");
    }
    .upload-pic.selfie {
        background-image:url("../assets/imgs/icon_photo.png");
    }
    .upload-pic.salary {
        background-image:url("../assets/imgs/icon_salary.png");
    }
    .upload-pic:first-child {
        margin-top:2rem;
    }
    .upload-pic.hkid {
        background-color:#a91530;
    }
    .upload-pic.passbook {
        background-color:#f20d28;
    }
    .btn-add {
        position: absolute;
        top:50%;
        right:4.4rem;
        transform: translateY(-50%);
        width:4.6rem;
        //height:3rem;
        //border-radius: 50%;
        background-color:transparent;
        color:#fff;
        ion-icon {
            font-size: 3.4rem;
            color:#fff;
        }
    }
    .has-pic {
        opacity: 0;
    }
}
